<!DOCTYPE html>
<html lang="en" translate="no">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SuperChat</title>
    <link rel="shortcut icon" href="#" />
    <link rel="stylesheet" href="/stylesheets/styles.css">
    <link rel="stylesheet" href="/stylesheets/normalize.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/cc4e947371.js" crossorigin="anonymous"></script>
</head>

<body class="chat-body back-white">
    <header class="chat-header back-white">
        <div class="header-left-side">
            <button class="hamburger hamburger--collapse" type="button">
                <span class="hamburger-box">
                    <span class="hamburger-inner"></span>
                </span>
            </button>
            <div class="logo position-initial">
                <h3><span>Super</span>Chat</h3>
            </div>
        </div>

        <div class="header-right-side">
            <nav>
                <ul>
                    <li>
                        <i class="fas fa-bell"></i>
                        <span class="notification-counter">0</span>
                        <div class="notifications back-white">
                            {{#each friendRequests}}
                            <div class="notification">
                                <span class="contact-name">{{this.from}}</span>
                                <div class="decision">
                                    <i class="fas fa-check"></i>
                                    <i class="fas fa-times"></i>
                                </div>
                                <input type="hidden" name="_id" value="{{this._id}}">
                            </div>
                            {{/each}}
                        </div>
                    </li>
                    <li>
                        <i class="fas fa-user-plus"></i>
                        <div class="add-friend back-white">
                            <form id="add-friend-form">
                                <span></span>
                                <input type="text" placeholder="Username">
                                <input type="submit" value="Add friend">
                            </form>
                        </div>
                    </li>
                    <li>
                        <form action="/logout" method="GET">
                            <button type="submit">
                                <i class="fas fa-power-off"></i>
                            </button>
                        </form>
                    </li>
                </ul>
            </nav>
            <div>
                <span id="username">{{username}}</span>
            </div>
        </div>
    </header>
    <div class="chat-main">
        <aside class="chat-aside">
            <div class="contacts-side back-white">
                <div class="search-contact back-white">
                    <input type="text" placeholder="Search...">
                </div>
                <div class="contacts">
                    {{#each contacts}}
                    <div class="contact back-white">
                        <span class="contact-name">{{this.username}}</span>
                        <div class="flex align-center">
                            <span class="last-message-date">{{this.lastMessageDate}}</span>
                            <span class="unreaded-messages-counter">{{this.unreadedMessages}}</span>
                        </div>
                        <input type="hidden" name="conversation-id" value="{{this.conversationId}}">
                    </div>
                    {{/each}}
                </div>
            </div>
            <div class="bottom-menu back-white">
                <div class="switch-dark-mode">
                    <span>Dark Mode</span>
                    <label class="switch">
                        <input type="checkbox">
                        <span class="slider round"></span>
                    </label>
                </div>
                <div class="logo position-initial">
                    <h3><span>Super</span>Chat</h3>
                </div>
            </div>
        </aside>
        <div class="messages-side back-gray">
            <div class="messages-window">
            </div>
            <form class="message-input-area back-gray">
                <input type="text" name="message" placeholder="Type something..." autocomplete="off">
                <button type="submit" class="send-button"><i class="fas fa-paper-plane"></i></button>
            </form>
        </div>
    </div>
    <script src="/socket.io/socket.io.js"></script>
    <script src="./js/chat-main.js"></script>
    <script src="./js/open-chat-aside.js"></script>
    <script src="./js/unreaded-messages.js"></script>
    <script src="./js/conversation.js"></script>
    <script src="./js/friend-request.js"></script>
    <script src="./js/search-contact.js"></script>
    <script src="./js/dark-mode.js"></script>
</body>

</html>